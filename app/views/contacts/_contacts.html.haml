.table-responsive
  %table.table.table-striped.table-hover.table-condensed
    %thead
      %tr
        %th First Name
        %th Last Name
        %th Phone
        %th Email
        %th
        %th
    %tbody
      - contacts.each do |contact|
        = content_tag_for(:tr, contact) do
          %td= link_to contact.first_name, contact
          %td= link_to contact.last_name, contact
          %td= contact.phone
          %td= contact.email
          %td= link_to "Edit", edit_contact_path(contact), class: "btn btn-xs btn-link" if current_user && current_user.admin?
          %td= link_to "Delete", contact, method: :delete, data: { confirm: 'Are you sure?' }, remote: true, class: "btn btn-xs btn-danger" if current_user && current_user.admin?