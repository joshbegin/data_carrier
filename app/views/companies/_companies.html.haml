.table-responsive
  %table.table.table-striped.table-hover.table-condensed
    %thead
      %tr
        %th Name
        %th Additional Name
        %th Parent Company
        %th
        %th
    %tbody
      - @companies.each do |company|
        %tr
          %td= link_to "#{company.name}", company
          %td= company.additional_name
          %td= company.parent_company.name
          %td= link_to "Edit", edit_company_path(company), class: "btn btn-xs btn-link" if current_user && current_user.admin?
          %td= link_to "Delete", company, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-xs btn-danger" if current_user && current_user.admin?