= form_for(@parent_company, :html => { :class => "form-horizontal"} ) do |f|
  - if @parent_company.errors.any?
    #error_explanation
      %h2
        = pluralize(@parent_company.errors.count, "error")
        prohibited this parent_company from being saved:
      %ul
        - @parent_company.errors.full_messages.each do |msg|
          %li= msg
  .form-group
    = f.label :name, class: "col-sm-3 control-label"
    .col-sm-9
      = f.text_field :name, placeholder: "Name", class: "form-control"
  .form-group
    = f.label :additional_name, class: "col-sm-3 control-label"
    .col-sm-9
      = f.text_field :additional_name, placeholder: "Alias", class: "form-control"
  .form-group
    .col-sm-offset-3.col-sm-9
      = f.submit class: "btn btn-primary"
      = link_to "Cancel", :back, class: "btn btn-default"